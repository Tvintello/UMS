{
    "manifest_version": 2,
    "name": "UMS - Unofficial Messenger Stickers",
    "version": "1.0.0",
    "description": "An extension for quick access to images on PC",
    
    "icons": {
      "48": "icons/icon-48.png"
    },
    
    "browser_action": {
      "default_icon": "icons/icon-48.png",
      "default_title": "UMS",
      "default_popup": "popup/popup.html"
    },
    
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    
    "permissions": [
      "storage"
    ],
    
    "options_ui": {
      "page": "options/options.html",
      "open_in_tab": false
    }
  }